<mvc:View
    controllerName="app.index.index.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <Label id="activityID" text="{/payload/activityId}"></Label>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>

